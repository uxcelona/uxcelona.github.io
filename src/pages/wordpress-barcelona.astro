	/* Overall form styling */
form {
    max-width: 100%; /* Sets a maximum width */
    margin: 0 auto; /* Centers the form on the page */
    padding: 20px; /* Adds some space inside the form */
    border-radius: 8px; /* Rounded corners */
}

/* Styling for input fields */
input[type="text"],
input[type="email"] {
    width: 97%; /* Full width */
    padding: 10px; /* Comfortable text padding */
    margin-bottom: 15px; /* Space between fields */
    border: 1px solid #ccc; /* Light grey border */
    border-radius: 4px; /* Slightly rounded corners */
	font-size: 18px;
	font-family: system-ui, sans-serif;
}



/* Styling for the submit button */
button {
    width: 100%; /* Full width */
    padding: 10px; /* Same padding as input fields */
    background-color: #8e44eb; /* Green background */
    color: white; /* White text */
    border: none; /* No border */
    border-radius: 4px; /* Slightly rounded corners */
    cursor: pointer; /* Cursor changes to pointer */
    font-size: 16px; /* Larger text size */
}

/* Change button style on hover */
button:hover {
    background-color: #ba91f2; /* Slightly darker green on hover */
}

/* Styling for the textarea */
textarea {
	font-size: 18px;
    width: 97%; /* Full width to match the input fields */
    padding: 10px; /* Comfortable padding */
    margin-bottom: 15px; /* Space below the textarea */
    border: 1px solid #ccc; /* Light grey border */
    border-radius: 4px; /* Rounded corners */
    min-height: 100px; /* Minimum height */
    resize: vertical; /* Allow vertical resizing only */
	font-family: system-ui, sans-serif;
}

/* Change textarea style on focus */
textarea:focus {
    border-color: #4CAF50; /* Highlighted border color */
    box-shadow: 0 0 8px rgba(76, 175, 80, 0.5); /* Subtle glow effect */
}
